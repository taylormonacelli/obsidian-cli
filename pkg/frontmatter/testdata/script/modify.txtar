# Test modifying frontmatter values
cp input.md test-vault/input.md
cp input.md test-vault/input.md.backup

exec obsidian-cli frontmatter print '.draft = true' input.md
cmp stdout modified-draft.golden
! stderr .
cmp test-vault/input.md test-vault/input.md.backup

exec obsidian-cli frontmatter print '.published = "2025-10-02"' input.md
cmp stdout added-field.golden
! stderr .
cmp test-vault/input.md test-vault/input.md.backup

exec obsidian-cli frontmatter print '.tags += ["new-tag"]' input.md
cmp stdout added-tag.golden
! stderr .
cmp test-vault/input.md test-vault/input.md.backup

-- input.md --
---
title: My Blog Post
draft: false
tags:
  - golang
---

# Content
-- modified-draft.golden --
title: My Blog Post
draft: true
tags:
  - golang
-- added-field.golden --
title: My Blog Post
draft: false
tags:
  - golang
published: "2025-10-02"
-- added-tag.golden --
title: My Blog Post
draft: false
tags:
  - golang
  - new-tag
